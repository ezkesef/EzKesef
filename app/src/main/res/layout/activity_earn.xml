<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EarnActivity"
    android:orientation="vertical"
    android:background="@drawable/earningbackground">


    <Button
        android:id="@+id/btnVideo"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:layout_marginTop="253dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#8A8A8A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="🎥"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/angry_btn"

        android:text="🎲"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="60dp"
        android:layout_gravity="left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#8A8A8A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <Button
        android:id="@+id/angry_btn2"

        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_gravity="center"

        android:layout_marginTop="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#8A8A8A"
        android:fontFamily="sans-serif-thin"
        android:shadowDx="0"

        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="הזמן חברים"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id2"></com.google.android.gms.ads.AdView>


</LinearLayout>